<!-- MainWindow.xaml -->
<Window x:Class="CreaturesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Живые Существа" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Move Panther" Command="{Binding MoveCommand}" CommandParameter="{Binding Panther}" Margin="5" Width="100"/>
            <Button Content="Stop Panther" Command="{Binding StopCommand}" CommandParameter="{Binding Panther}" Margin="5" Width="100"/>
            <Button Content="Panther Roar" Command="{Binding MakeSoundCommand}" CommandParameter="{Binding Panther}" Margin="5" Width="100"/>
            <Button Content="Climb Tree" Command="{Binding ClimbTreeCommand}" CommandParameter="{Binding Panther}" Margin="5" Width="100"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Move Dog" Command="{Binding MoveCommand}" CommandParameter="{Binding Dog}" Margin="5" Width="100"/>
            <Button Content="Stop Dog" Command="{Binding StopCommand}" CommandParameter="{Binding Dog}" Margin="5" Width="100"/>
            <Button Content="Dog Bark" Command="{Binding MakeSoundCommand}" CommandParameter="{Binding Dog}" Margin="5" Width="100"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Move Turtle" Command="{Binding MoveCommand}" CommandParameter="{Binding Turtle}" Margin="5" Width="100"/>
            <Button Content="Stop Turtle" Command="{Binding StopCommand}" CommandParameter="{Binding Turtle}" Margin="5" Width="100"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="10" HorizontalAlignment="Center">
            <TextBlock Text="Скорости:" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding Panther.Speed, StringFormat=Пантера: {0} км/ч}"/>
            <TextBlock Text="{Binding Dog.Speed, StringFormat=Собака: {0} км/ч}"/>
            <TextBlock Text="{Binding Turtle.Speed, StringFormat=Черепаха: {0} км/ч}"/>
            <TextBlock Text="Последний звук:" FontWeight="Bold" FontSize="16" Margin="0,10,0,5"/>
            <TextBlock Text="{Binding SoundText}" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>